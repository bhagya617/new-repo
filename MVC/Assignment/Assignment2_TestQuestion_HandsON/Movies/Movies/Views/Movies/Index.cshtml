@model IEnumerable<Movies.Models.Movie>
 
<h2>Movies</h2>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Date of Release</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Mid</td>
                <td>@movie.Moviename</td>
                <td>@movie.DateofRelease.ToShortDateString()</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = movie.Mid }) |
                    @Html.ActionLink("Delete", "Delete", new { id = movie.Mid })
                </td>
            </tr>
        }
    </tbody>
</table>
 
@Html.ActionLink("Create New", "Create")
 