@model Employee_Travel_Booking_MVC.Models.Menu
@{ ViewBag.Title = "Hello!"; }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <h1>Hello!</h1>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Nunito', sans-serif;
            background-size: cover;
            color: #fff;
            padding: 50px 0;
        }

        h2 {
            text-align: center;
            color: rgba(0, 0, 0, 0.6);
            margin-bottom: 40px;
            font-size: 2rem;
            font-weight: bold;
        }

        .form-container {
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
            background-color: rgba(0, 0, 0, 0.6); /* Semi-transparent background */
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.2);
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                font-size: 1.1rem;
                color: #fff;
                font-weight: 600;
            }

            .form-group input {
                width: 100%;
                padding: 12px;
                border: 1px solid #ddd;
                border-radius: 8px;
                font-size: 1rem;
                color: #333;
                margin-top: 8px;
            }

                .form-group input:focus {
                    border-color: #3a8d99;
                    outline: none;
                }

        .btn {
            width: 100%;
            padding: 12px;
            background-color: #3a8d99;
            color: white;
            border: none;
            font-weight: 600;
            font-size: 1.1rem;
            cursor: pointer;
            border-radius: 8px;
            letter-spacing: 1px;
            transition: background-color 0.3s ease;
        }

            .btn:hover {
                background-color: #2c6e72;
            }

        .back-link {
            display: block;
            text-align: center;
            margin-top: 20px;
            color: #fff;
            font-size: 1rem;
        }

            .back-link a {
                text-decoration: none;
                color: #fff;
                font-weight: 600;
                transition: color 0.3s ease;
            }

                .back-link a:hover {
                    color: #3a8d99;
                }

        footer {
            text-align: center;
            margin-top: 30px;
            color: #fff;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>

    <h2>Welcome to the Employee Travel Booking</h2>
    @using (Html.BeginForm("Create", "Menu", FormMethod.Post, new { id = "menuForm" }))
    {
@Html.AntiForgeryToken()
                <div class="form-container">
                    <div class="form-group">
                        @Html.LabelFor(model => model.EmployeeId)
                        @Html.TextBoxFor(model => model.EmployeeId, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.EmployeeName)
                        @Html.TextBoxFor(model => model.EmployeeName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.CompanyName)
                        @Html.TextBoxFor(model => model.CompanyName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Age)
                        @Html.TextBoxFor(model => model.Age, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn">Save</button>
                </div>}
    <div class="back-link">
        @Html.ActionLink("Back to List", "Create")
    </div>
    <footer>
        &copy; 2025 Your Company. All Rights Reserved.
    </footer>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        <script>
           $('#menuForm').on('submit', function (e) {
               e.preventDefault();
               $.ajax({
                   url: '@Url.Action("Create", "Menu")',
                   type: 'POST',
                   data: $(this).serialize(),
                   success: function (data) {
                       var employeeName = $('#EmployeeName').val();
                       window.location.href = '@Url.Action("Index", "Login", new { empName = "__empName__" })'.replace('__empName__', employeeName);
                   },
                   error: function () {
                       alert('There was an error submitting the form');
                   }
               });
           });
        </script>
    }
</body>
</html>