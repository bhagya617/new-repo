@{ ViewBag.Title = "Manager Dashboard"; }
@{ Layout = "~/Views/Shared/_ManagerLayout.cshtml"; }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manager Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Nunito', sans-serif;
            background-color: #f4f6f9; /* Light gray background */
            overflow-x: hidden;
            padding: 30px;
        }

        h2 {
            text-align: center;
            color: #333;
            margin-top: 50px;
            margin-bottom: 20px;
        }

        .card-container {
            display: flex;
            flex-direction: column;
            gap: 30px;
            max-width: 1000px;
            margin: 0 auto;
        }

        .card {
            width: 100%;
            max-width: 350px;
            border-radius: 10px;
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            padding: 20px;
            margin: 0 auto;
        }

            .card:hover {
                transform: translateY(-10px);
                box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
            }

        .card-header {
            background-color: #3a8d99; /* Teal header */
            color: white;
            font-weight: bold;
            text-transform: uppercase;
            border-radius: 8px;
            padding: 20px;
            text-align: center;
            font-size: 1.2rem;
        }

        .card-content {
            text-align: center;
            padding: 20px 0;
        }

            .card-content i {
                font-size: 40px;
                color: #3a8d99;
                margin-bottom: 15px;
            }

            .card-content p {
                font-size: 16px;
                color: #333;
                margin-bottom: 20px;
                font-weight: 500;
            }

        .btn {
            padding: 12px 24px;
            background-color: #3a8d99; /* Teal button */
            color: white;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
            display: inline-block;
            font-weight: 600;
            letter-spacing: 1px;
            text-decoration: none;
            border-radius: 8px;
        }

            .btn:hover {
                background-color: #2c6e72; /* Darker teal on hover */
            }

        footer {
            background-color: #343a40;
            color: #fff;
            text-align: center;
            padding: 20px 0;
            margin-top: 50px;
            width: 100%;
        }
    </style>
</head>
<body>
    <h2>Welcome to the Manager Dashboard!</h2>
    <div class="card-container">
        <!-- View Travel Requests Card -->
        <div class="card">
            <div class="card-header">
                Travel Requests
            </div>
            <div class="card-content">
                <i class="fas fa-tasks"></i>
                <p>View and manage travel requests for employees.</p>
                <a href="@Url.Action("Requests", "Manager")" class="btn">View Travel Requests</a>
            </div>
        </div>
        <!-- Travel Request History Card -->
        <div class="card">
            <div class="card-header">
                Travel Request History
            </div>
            <div class="card-content">
                <i class="fas fa-history"></i>
                <p>Check the history of all travel requests.</p>
                <a href="@Url.Action("RequestHistory", "Manager")" class="btn">View History</a>
            </div>
        </div>
        <!-- View Employees Card -->
        <div class="card">
            <div class="card-header">
                Employees Management
            </div>
            <div class="card-content">
                <i class="fas fa-users"></i>
                <p>View employee details and manage teams.</p>
                <a href="@Url.Action("ViewEmployees", "Manager")" class="btn">View Employees</a>
            </div>
        </div>
    </div>
  
</body>
</html>
