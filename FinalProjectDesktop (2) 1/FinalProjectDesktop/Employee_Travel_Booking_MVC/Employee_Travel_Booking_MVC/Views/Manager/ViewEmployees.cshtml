@{ ViewBag.Title = "ViewEmployees"; }

@*<h2>ViewEmployees</h2>*@


@model IEnumerable<Employee_Travel_Booking_MVC.Models.employee>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Employees</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #008080; /* Teal color for header */
            color: white; /* White text for contrast */
        }

        tr:nth-child(even) {
            background-color: #e0f7f7; /* Light teal for even rows */
        }

        tr:hover {
            background-color: #b2dede; /* Slightly darker teal on hover */
        }

        td {
            color: #004d4d; /* Teal shade for text */
        }
    </style>
</head>
<body>
    <h2>Employees Reporting To You</h2>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
<tr>
    <td>@employee.employeeid</td>
    <td>@employee.emp_name</td>
    <td>@employee.email</td>
    <td>@employee.phonenumber</td>
</tr>
}
        </tbody>
    </table>
</body>
</html>