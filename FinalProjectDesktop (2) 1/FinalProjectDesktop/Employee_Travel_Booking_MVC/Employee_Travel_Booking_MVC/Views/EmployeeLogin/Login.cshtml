﻿@{ ViewBag.Title = "Login";

    Layout = "~/Views/Shared/_loginLayout.cshtml"; }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Login</title>
    <!-- Include Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>

        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
            overflow: hidden; /* Hide overflow to prevent scrolling */
            background: url('https://img.freepik.com/premium-photo/travel-concept-blue-background-with-copy-space-airplane-toy-blue-color-background_661495-33676.jpg')no-repeat center center fixed;
            background-size: cover;
            position: relative;
            background-color: #fff; /* Light gray background */
        }

        .login-container {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: #000000; /* Black background color */

            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 0 15px rgba(0, 128, 0, 0.7); /* Green box shadow */

            width: 400px;
            max-width: 90%;
            animation: slideIn 0.5s forwards; /* Apply slide-in animation */

            opacity: 1; /* Ensure full visibility */

            height: auto;
            text-align: center; /* Center align text and icon */
        }

        @@keyframes slideIn {

            from {
                transform: translate(-50%, -70%);
                opacity: 0;
            }

            to {
                transform: translate(-50%, -50%);
                opacity: 1;
            }
        }

        .icon {
            font-size: 48px; /* Large icon size */

            color: #fff; /* White color for the icon */

            margin-bottom: 10px; /* Space between icon and title */
        }

        h2 {
            margin-bottom: 20px;
            color: #0094ff; /* Blue title */

            font-size: 24px; /* Increase font size for the title */

            font-weight: 700; /* Make title bold */

            text-shadow: 1px 1px 4px rgba(0, 128, 0, 0.6); /* Add text shadow for better visibility */
        }

        label {
            display: block;
            font-weight: bold;
            margin-bottom: 10px;
            color: #fff
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 12px;
            margin-bottom: 10px; /* Decreased margin bottom for less space between inputs */

            border: 1px solid #4caf50; /* Green border */

            border-radius: 5px;
            box-sizing: border-box;
            background-color: #fff; /* Very light gray background for inputs */

            margin-top: 15px;
        }

        input[type="submit"] {
            width: 100%;
            padding: 12px;
            background-color: #0026ff; /* Green background */

            color: #fff; /* White text color */

            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-top: 25px;
            font-size: 16px; /* Larger font size for better readability */
        }

            input[type="submit"]:hover {
                background-color: #4cff00; /* Darker green on hover */
            }

        .error-message {
            color: #f44336; /* Red color for error messages */

            margin-top: 10px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <!-- Add a suitable icon for employee login -->
        @*<i class="fas fa-user icon"></i>*@ <!-- User icon -->
        <h2>Employee Login</h2>

        @if (TempData["ErrorMessage"] != null)

        {
<div class="error-message">@TempData["ErrorMessage"]</div>}
        <form method="post" action="@Url.Action("Login", "EmployeeLogin")">

            @Html.AntiForgeryToken()
            <label for="email">Email:</label>
            <input type="text" id="email" name="email" required>
            <label for="password" style="margin-top:16px">Password:</label>
            <input type="password" id="password" name="password" required>
            <input type="submit" value="Login">

            <p>
                <br />
                <a style="color:red;" href="@Url.Action("ForgotPassword", "EmployeeLogin")">Forgot Password?</a>
            </p>
        </form>
    </div>
</body>
</html>
