@model Employee_Travel_Booking_MVC.Models.employee
@{ ViewBag.Title = "Details";
                Layout = "~/Views/Shared/_EmployeeLayout.cshtml"; }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Details</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <style>
        body {
            font-family: 'Nunito', sans-serif;
            background-color: #f5f6fa;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            color: #2c3e50;
            margin-bottom: 20px;
            font-size: 2rem;
            font-weight: bold;
        }

        .card {
            border: none;
            background: #ecf0f1;
            padding: 20px;
            border-radius: 10px;
        }

        .card-body dl {
            margin: 0;
        }

        .card-body dt {
            font-weight: bold;
            color: #34495e;
        }

        .card-body dd {
            margin-bottom: 15px;
            color: #2c3e50;
        }

        .btn {
            padding: 10px 20px;
            color: #fff;
            background-color: #3498db;
            text-decoration: none;
            border-radius: 5px;
            font-size: 1rem;
            transition: background-color 0.3s;
        }

            .btn:hover {
                background-color: #2980b9;
            }

        .text-center {
            text-align: center;
        }

        .mt-3 {
            margin-top: 20px;
        }

        .mr-2 {
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Employee Details</h2>
        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Employee ID:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.employeeid)</dd>
                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.emp_name)</dd>
                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.email)</dd>
                    <dt class="col-sm-4">Department:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.department)</dd>
                    <dt class="col-sm-4">Position:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.position)</dd>
                    <dt class="col-sm-4">Hire Date:</dt>
                    <dd class="col-sm-8">@Model.hiredate.Value.ToString("dd-MM-yyyy")</dd>
                    <dt class="col-sm-4">Phone Number:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.phonenumber)</dd>
                    <dt class="col-sm-4">Address:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.address)</dd>
                    <dt class="col-sm-4">Manager:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.manager.name)</dd>
                </dl>
            </div>
        </div>
        <div class="mt-3 text-center">
            @Html.ActionLink("Back to Dashboard", "Index", "travelrequests", null, new { @class = "btn btn-primary mr-2" })
        </div>
    </div>
</body>
</html>