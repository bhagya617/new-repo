
@model Employee_Travel_Booking_MVC.Models.travelrequest

@{ ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml"; }

<h2>Edit</h2>
<div class="container mt-5">
    <h2 class="text-center mb-4">Travel Request Cancellation</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group row">
            @Html.LabelFor(model => model.approvalstatus, "Please confirm your cancellation:", htmlAttributes: new { @class = "col-sm-4 col-form-label" })
            <div class="col-sm-8">
                @Html.DropDownListFor(model => model.approvalstatus, new SelectList(new[] { "Cancelled" }), "-- Select Option --", new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(model => model.approvalstatus, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-offset-4 col-sm-8">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>}

    <div class="form-group row">
        <div class="col-sm-8 offset-sm-4">
            <a href="@Url.Action("Index")" class="btn btn-info btn-sm details-btn">Back to Dashboard</a>
        </div>
    </div>

</div>


